<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" minWidth="750.0" prefHeight="95.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="90.0" minWidth="650.0" prefHeight="90.0" prefWidth="789.0" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" prefHeight="18.0" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="taskName" minWidth="600.0" prefHeight="18.0" styleClass="cell_big_label" text="\$first">
                    <padding>
                        <Insets bottom="2.0" right="10.0" top="5.0" />
                    </padding>
                </Label>
                 <FlowPane fx:id="contacts" alignment="CENTER_LEFT" prefHeight="18.0" HBox.hgrow="ALWAYS">
                     <padding>
                         <Insets right="10.0" />
                     </padding>
                 </FlowPane>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="18.0" translateX="25.0">
                  <Label fx:id="deadline" alignment="TOP_RIGHT" contentDisplay="RIGHT" styleClass="due_date_label" textAlignment="RIGHT">
                      <padding>
                          <Insets right="10.0" />
                      </padding>
                  </Label>
                <Label fx:id="description" styleClass="cell_small_label" text="\$description" />
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </HBox>
            <GridPane.margin>
                <Insets top="5.0" />
            </GridPane.margin>
        </VBox>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>
</HBox>
