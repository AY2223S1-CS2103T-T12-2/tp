<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" prefHeight="90.0" prefWidth="313.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="90.0" prefHeight="90.0" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" prefHeight="18.0" spacing="5.0">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="name" prefHeight="17.0" prefWidth="280.0" styleClass="cell_big_label" text="\$first">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </Label>
            <FlowPane alignment="TOP_RIGHT" columnHalignment="RIGHT" prefHeight="18.0" prefWidth="60.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="deadline" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="17.0" styleClass="due_date_label" textAlignment="RIGHT">
                     <padding>
                        <Insets bottom="10.0" right="10.0" />
                     </padding>
                     <FlowPane.margin>
                        <Insets bottom="5.0" />
                     </FlowPane.margin>
                  </Label>
               </children>
            </FlowPane>
            </HBox>
            <HBox prefHeight="15.0" prefWidth="130.0">
            <children>
               <FlowPane fx:id="contacts" styleClass="" prefWidth="200.0">
                  <HBox.margin>
                     <Insets left="20.0" />
                  </HBox.margin>
               </FlowPane>
            </children>
            </HBox>
        </VBox>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>
</HBox>
